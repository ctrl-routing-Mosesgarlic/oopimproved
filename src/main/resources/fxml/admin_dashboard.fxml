<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.drinks.rmi.client.gui.controller.AdminDashboardController">
    <center>
        <TabPane>
            <tabs>
                <Tab text="Dashboard">
                    <VBox spacing="20">
                        <padding>
                            <Insets bottom="20" left="20" right="20" top="20" />
                        </padding>
                        <Label fx:id="welcomeLabel" text="Admin Dashboard" styleClass="header-label">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="serverInfoLabel" text="Connected to: Headquarters (HQ)" />
                        
                        <!-- Dashboard Stats -->
                        <HBox spacing="20">
                            <Label fx:id="totalUsersLabel" text="Total Users: 0" />
                            <Label fx:id="totalDrinksLabel" text="Total Drinks: 0" />
                            <Label fx:id="totalOrdersLabel" text="Total Orders: 0" />
                            <Label fx:id="totalRevenueLabel" text="Total Revenue: $0.00" />
                        </HBox>
                        
                        <HBox spacing="10">
                            <Button fx:id="refreshStatsButton" text="Refresh Stats" />
                            <Button fx:id="logoutButton" text="Logout" />
                        </HBox>
                        <HBox layoutX="20" layoutY="450" spacing="10">
                            <ComboBox fx:id="fromRoleComboBox" prefWidth="150" promptText="From Role"/>
                            <Label text="â†’" />
                            <ComboBox fx:id="toRoleComboBox" prefWidth="150" promptText="To Role"/>
                            <Button fx:id="updateRolesButton" mnemonicParsing="false" onAction="#handleUpdateRoles" prefHeight="35" prefWidth="200" text="Update Roles" />
                        </HBox>
                    </VBox>
                </Tab>
                
                <Tab text="Drinks Management">
                    <VBox spacing="10">
                        <TableView fx:id="drinksTable">
                            <columns>
                                <TableColumn fx:id="drinkIdColumn" text="ID" />
                                <TableColumn fx:id="drinkNameColumn" text="Name" />
                                <TableColumn fx:id="drinkPriceColumn" text="Price" />
                            </columns>
                        </TableView>
                        <HBox spacing="10">
                            <TextField fx:id="drinkNameField" promptText="Drink Name" />
                            <TextField fx:id="drinkPriceField" promptText="Price" />
                            <Button fx:id="addDrinkButton" text="Add" />
                            <Button fx:id="updateDrinkButton" text="Update" />
                            <Button fx:id="deleteDrinkButton" text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
                
                <Tab text="Users Management">
                    <VBox spacing="10">
                        <TableView fx:id="usersTable">
                            <columns>
                                <TableColumn fx:id="userIdColumn" text="ID" />
                                <TableColumn fx:id="usernameColumn" text="Username" />
                                <TableColumn fx:id="roleColumn" text="Role" />
                            </columns>
                        </TableView>
                        <HBox spacing="10">
                            <TextField fx:id="usernameField" promptText="Username" />
                            <PasswordField fx:id="passwordField" promptText="Password" />
                            <ComboBox fx:id="roleComboBox" promptText="Select Role" />
                            <ComboBox fx:id="branchComboBox" promptText="Select Branch" />
                            <Button fx:id="addUserButton" text="Add" />
                            <Button fx:id="deleteUserButton" text="Delete" />
                        </HBox>
                    </VBox>
                </Tab>
                
                <Tab text="Payments">
                    <VBox spacing="10">
                        <TableView fx:id="paymentsTable">
                            <columns>
                                <TableColumn fx:id="paymentIdColumn" text="ID" />
                                <TableColumn fx:id="paymentOrderIdColumn" text="Order ID" />
                                <TableColumn fx:id="paymentCustomerIdColumn" text="Customer ID" />
                                <TableColumn fx:id="paymentAmountColumn" text="Amount" />
                                <TableColumn fx:id="paymentMethodColumn" text="Method" />
                                <TableColumn fx:id="paymentStatusColumn" text="Status" />
                                <TableColumn fx:id="paymentDateColumn" text="Date" />
                            </columns>
                        </TableView>
                        <HBox spacing="10">
                            <ComboBox fx:id="paymentStatusFilter" promptText="Filter by Status" />
                            <Button fx:id="refreshPaymentsButton" text="Refresh" />
                        </HBox>
                    </VBox>
                </Tab>
                
                <Tab text="Reports">
                    <VBox spacing="10">
                        <HBox spacing="10">
                            <ComboBox fx:id="reportTypeComboBox" promptText="Select Report Type" />
                            <Button fx:id="generateReportButton" text="Generate" />
                        </HBox>
                        <TextArea fx:id="reportTextArea" wrapText="true" />
                    </VBox>
                </Tab>
            </tabs>
        </TabPane>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <ProgressIndicator fx:id="progressIndicator" visible="false" />
            <Label fx:id="statusLabel" text="Ready" />
        </HBox>
    </bottom>
</BorderPane>
